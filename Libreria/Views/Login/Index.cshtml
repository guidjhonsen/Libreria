
@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Autenticación</h2>

<div class="container login-container">
  <form method="post">
    <div class="row">
      <div class="col-md-6 login-form-1">
        <div class="form-group">
          Usuario: <input type="text" name="txtUser" class="form-control" placeholder="Cuenta" value="" />
        </div>
        <div class="form-group">
          Contrasena: <input type="password" name="txtPwd" class="form-control" placeholder="Contraseña" value="" />
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-success" value="Ingresar" />
        </div>
      </div>
    </div>
      <p style="color: red;">@ViewBag.Mensaje</p>
  </form>
  
</div>